<%= link_to 'Edit', edit_route_path(@route) %> |
<%= link_to 'Back', routes_path %>

<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @route.name %>
</p>

<p>
  <strong>Trains:</strong>
  <ul>
    <% if @route.trains.present? %>
      <% @route.trains.each do |train| %>
        <li><%= train.number %></li>
      <% end %>
    <% else %>
      There are no trains on the route
    <% end %>
  </ul>
</p>

<p>
  <strong>Stations:</strong>
  <% if @route.railway_stations.present? %>
    <div class="row">
      <table id="table-route-stations" class="table table-striped col-lg-6 col-md-6">
        <thead>
          <tr>
            <th>Name</th>
            <th>Position</th>
          </tr>
        </thead>
        <tbody>
          <% @route.railway_stations.each do |railway_station| %>
            <tr>
              <td><%= railway_station.name %></td>
              <td>              
                <%= form_tag update_position_railway_station_path(railway_station), method: :patch do %>
                  <%= number_field_tag :position, railway_station.position_in(@route) %>

                  <%= time_select :arrival, railway_station.time_arrival_in(@route), :default => {:hour => '10', :minute => '20'} %> |
                  <%= time_select :departure, value: railway_station.time_departure_in(@route), default: Time.now %>
                  <%= hidden_field_tag :route_id, @route.id %>
                  <%= submit_tag "Update" %>
                <% end %>
              </td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  <% else %>
    There are no staion on the route
  <% end %>
</p>
  
<br>
