<h1>Search</h1>

<h2>Новый поиск</h2>
<%= form_tag search_path, method: :get do %>
  <%= label_tag :starting %>
  <%= select_tag :starting, options_for_select(station_list) %>
  <%= label_tag :destination %>
  <%= select_tag :destination, options_for_select(station_list) %>
  <%= submit_tag "Search" %>
<% end %>

<% if @data %>
  <h2>Results</h2>
  <% if @data.present? %>
    <ul>
      <% @data.each do |route, data| %>
        <li><%= route_name(route) %></li>
        <ul>
          <% trains(route).each do |train| %>
            <li><%= train.number %></li>
            <li>Departure: <%= data[:departure] %></li>
            <li>Arrival:<%= data[:arrival] %></li>
            <li>
              <%= button_to "Buy", new_ticket_path, method: :get, params:{ starting: data[:starting],
                            destination: data[:destination], train_id: train.id } %>
            </li>
          <% end %>
        </ul>
      <% end %>
    </ul>
  <% else %>
    <p>No routes</p>
  <% end %>
<% end %>
