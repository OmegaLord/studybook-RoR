<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@ticket, class: 'form-horizontal') do |form| %>
      <%= render 'common/error', resource: @ticket %>

      <div class="field form-group">
        <%= form.label :name %>
        <%= form.text_field :name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :middle_name %>
        <%= form.text_field :middle_name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :last_name %>
        <%= form.text_field :last_name, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :passport %>
        <%= form.text_field :passport, class: "form-control" %>
      </div>

      <div class="field form-group">
        <%= form.label :train %>
        <p><%= @ticket.train.number %></p>
        <%= form.hidden_field(:train_id, value: @ticket.train.id) %>
      </div>

      <div class="field form-group">
        <%= form.label :starting %>
        <p><%= @ticket.first_station.name %></p>
        <%= form.hidden_field(:first_station_id, value: @ticket.first_station.id) %>
      </div>

      <div class="field form-group">
        <%= form.label :destination %>
        <p><%= @ticket.last_station.name %></p>
        <%= form.hidden_field(:last_station_id, value: @ticket.last_station.id) %>
      </div>

      <div class="field form-group">
        <%= form.label :departure %>
        <p><%= form.datetime_field :departure %></p>
      </div>

      <div class="field form-group">
        <%= form.label :arrival %>
        <p><%= form.datetime_field :arrival %></p>
      </div>

      <div class="actions">
        <%= form.submit "Create ticket",  class: "btn btn-primary" %>
      </div>
    <% end %>
  </div>
</div>