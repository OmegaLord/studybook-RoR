<%= form_for([:admin, @train], class: 'form-horizontal') do |form| %>
  <%= render 'common/error', resource: @train %>
  <div class="field">
    <%= form.label :number %>
    <%= form.text_field :number %>
  </div>

  <div class="field">
      <%= form.label :routes %>
    <div class="checkbox-list">
      <%= form.collection_select :routes, Route.all, :id, :name %>
    </div>
  </div>

  <div class="field">
    <%= form.label :current_station_id %>
    <%= form.collection_select :current_station_id, RailwayStation.all, :id, :name %>
  </div>

  <div class="field">
    <%= form.label :sort, t(".from_head") %>
    <%= form.check_box :sort %>
  </div>

  <div class="actions">
    <%= form.submit class: 'btn btn-default' %>

  </div>
<% end %>
