<%= form_for([:admin, @route], class: 'form-horizontal') do |form| %>
  <%= render 'common/error', resource: @route %>

  <div class="field">
      <%= form.label :railway_station_ids %>
    <div class="checkbox-list">
       <%= form.collection_select(:railway_station_ids, RailwayStation.all, :id, :name, 
                                  { include_hidden: false }, { multiple: true }) %>
    </div>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
